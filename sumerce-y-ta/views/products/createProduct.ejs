<form
  action="/products/admproducto/create"
  method="POST"
  enctype="multipart/form-data"
>
  <fieldset>
    <label for="name">Nombre :</label>
    <input
      type="text"
      name="name"
      id="name"
      placeholder="Nombre del producto."
    />
  </fieldset>
  <fieldset>
    <label for="description">Descripción :</label>
    <input
      type="textarea"
      name="description"
      id="description"
      placeholder="Descripción del producto."
    />
  </fieldset>
  <fieldset>
    <label for="photo">Foto :</label>
    <input type="file" name="photo" id="photo" accept=".jpg, .png, .sgv" />
  </fieldset>
  <fieldset>
    <label>Categoría :</label>
    <select name="categories">
      <option value="ropa">Seleccionar...</option>
      <option value="Ropa">Ropa</option>
      <option value="Deportivo">Deportivo</option>
      <option value="Accesorios">Accesorios</option>
    </select>
  </fieldset>
  <fieldset>
    <label for="">Talla :</label>
    <div class="modal-mr">
      <% tallas.forEach(talla=>{ %>
      <label for="<%= talla %>"><%= talla %> :</label>
      <input
        type="checkbox"
        id="<%= talla %>"
        name="sizes"
        value="<%= talla %>"
      />
    </div>
    <% }) %>
  </fieldset>
  <fieldset>
    <label>Tonalidad :</label>
    <% tonalidades.forEach(tonalidad=>{ %>
    <div class="modal-mr">
      <label for="<%= tonalidad%>"><%= tonalidad%> :</label>
      <input
        type="checkbox"
        id="<%= tonalidad%>"
        name="color"
        value="<%= tonalidad%>"
      />
    </div>
    <% }) %>
  </fieldset>
  <fieldset>
    <label for="">Tipo :</label>
    <% tipos.forEach(tipo=>{ %>
    <div class="modal-mr">
      <label for="<%= tipo %>"> <%= tipo %> :</label>
      <input type="checkbox" id="<%= tipo %>" name="type" value="<%= tipo %>" />
    </div>
    <% }) %>
  </fieldset>
  <label for="price">Precio :</label>
  <input
    type="text"
    id="price"
    placeholder="Precio del producto."
    name="price"
  />
  <button type="submit" class="button-products">Agregar</button>
</form>
